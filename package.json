{
  "name": "shopping-list-app-2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": "prettier --write",
    "apps/backend/src/**/*.{ts,tsx}": "pnpm --filter backend run lint",
    "apps/frontend/src/**/*.{ts,tsx}": "pnpm --filter frontend run lint"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
